# Kickstart file automatically generated by anaconda.

#version=RHEL6
install
text
# Use NFS installation media
  #nfs --server=repo.centos.qa --dir=/srv/CentOS/7/os/x86_64/
{% if 'nfs' in inventory_hostname %}
nfs --server=qa.centos.org --dir=/srv/mirrors/qa.centos.org/centos/{{ centos_dist }}/os/{{ centos_arch }}/
{% endif %}
{% if 'http' in inventory_hostname %}
url --url="http://qa.centos.org/centos/{{ centos_dist }}/os/{{ centos_arch }}/"
{% endif %}
{% if 'ftp' in inventory_hostname %}
url --url="ftp://qa.centos.org/qa.centos.org/centos/{{ centos_dist }}/os/{{ centos_arch }}/"
{% endif %}
#
lang en_US.UTF-8
keyboard be-latin1
network --activate  --bootproto=static --hostname={{ inventory_hostname }} --ip={{ ip }} --netmask={{ netmask }} --nameserver={{ nameserver }} --gateway={{ gateway }}
rootpw  --iscrypted $6$UC9FxKSxkAykTyj5$yy1MV7GklsxEjaZZqFOu3dM54LheN0vj9p5wA5ophRz5CGV4m39RFum5k.ntcLOYBJ04JWh8ScWdKLSff52FQ1
firewall --service=ssh
authconfig --enableshadow --passalgo=sha512 --enablefingerprint
selinux --enforcing
timezone --utc Etc/GMT
bootloader --location=mbr --driveorder=sda --append="crashkernel=auto rhgb"
# The following is the partition information you requested
# Note that any partitions you deleted are not expressed
# here so unless you clear all partitions first, this is
# not guaranteed to work
zerombr
clearpart --all --drives=sda --initlabel
#volgroup VolGroup --pesize=4096 pv.8OPOk4-YPU1-JSDW-SgsM-L8mu-KxkT-cpjbCw
#logvol / --fstype=ext4 --name=lv_root --vgname=VolGroup --grow --size=1024 --maxsize=51200
#logvol swap --name=lv_swap --vgname=VolGroup --grow --size=752 --maxsize=1504

#part /boot --fstype=ext4 --size=500
#part pv.8OPOk4-YPU1-JSDW-SgsM-L8mu-KxkT-cpjbCw --grow --size=1

part /boot --fstype=ext3 --asprimary --size=500
part pv.2 --size=1 --grow --ondisk=sda
volgroup c6vbox-vg --pesize=32768 pv.2
logvol / --fstype=ext4 --name=lv_root --vgname=c6vbox-vg --grow --size=1024 --maxsize=51200
logvol swap --name=lv_swap --vgname=c6vbox-vg --grow --size=1008 --maxsize=2016

reboot

%packages
@core

%post
# setup qa users's ssh key for root access
mkdir /root/.ssh
echo "ssh-dss  qa@admin.bc.dev.centos.org" >> /root/.ssh/authorized_keys
chmod 700 /root/.ssh
chmod 600 /root/.ssh/* ; chcon -v -R -t ssh_home_t /root/.ssh**

echo "# announce we are online" >> /etc/rc.d/rc.local


%end
