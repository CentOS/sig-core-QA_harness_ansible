DEFAULT {{ inventory_hostname }}-deploy
PROMPT 0
TIMEOUT 50
TOTALTIMEOUT 6000
ONTIMEOUT {{ inventory_hostname }}-deploy

LABEL local
        MENU LABEL (local)
        MENU DEFAULT
        LOCALBOOT 0

LABEL {{ inventory_hostname}}-deploy
        MENU LABEL CentOS {{ centos_dist }} {{ centos_arch }}- DevTools Kickstart for {{ inventory_hostname }}
        kernel boot/qa//{{ centos_dist }}/{{ centos_arch}}/vmlinuz
         {% if centos_dist == 7 or centos_dist == 8 or centos_dist == '8-stream' -%}
	append initrd=boot/qa/{{ centos_dist }}/{{ centos_arch }}/initrd.img net.ifnames=0 biosdevname=0 ip=eth0:dhcp inst.ks={{ ks_url }}/{{ inventory_hostname }}-ks.cfg 
         {% else -%}
        append initrd=CentOS/{{ centos_dist }}/{{ centos_arch }}/initrd.img ksdevice=eth0 ip=dhcp ks={{ ks_url }}/{{ inventory_hostname }}-ks.cfg
         {% endif %}
